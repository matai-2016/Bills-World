{
  "parser": "babel-eslint", // https://github.com/babel/babel-eslint,
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "expect": true,
    "sinon": true,
    "__DEV__": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "strict": [2, "global"],
    "no-undef": 2,
    "no-unused-vars": 2,
    "semi": [2, "never"],
    "semi-spacing": 2,
    "no-extra-semi": 2,
    "no-unexpected-multiline": 2,
    "quotes": [2, "single", "avoid-escape"],
    "indent": [2, 2, { "SwitchCase": 1 }]
  }
}
